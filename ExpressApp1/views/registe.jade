extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        form.form-horizontal(method="post")
          .form-group
            label.control-label.col-sm-4 姓名
            .col-sm-8
              input.form-control(name="name",type="text",placeholder="name")
          .form-group
            label.control-label.col-sm-4 密码
            .col-sm-8
              input.form-control(name="password",type="password",placeholder="password")
          .form-group
            label.control-label.col-sm-4 确认密码
            .col-sm-8
              input.form-control(name="confirm",type="password",placeholder="password")
          .form-group
            .col-sm-4.col-sm-offset-4
              br
              button.btn.btn-default(type="submit") 注册
