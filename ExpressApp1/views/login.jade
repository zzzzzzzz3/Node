extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        form.form-horizontal(method="post")
          .form-group
            label.control-label.col-sm-4(for="inputEmail") 姓名
            .col-sm-8
              input.form-control(name="name",type="text",placeholder="name")
          .form-group
            label.control-label.col-sm-4(for="inputPassword") 密码
            .col-sm-8
              input.form-control(name="password",type="password",placeholder="password")
          .form-group
            .col-sm-8.col-sm-offset-4
              .checkbox
                label
                  input(type="checkbox")
                  | 记住我
          .form-group
            .col-sm-4.col-sm-offset-4
              button.btn.btn-default(type="submit") 登录