extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        form.form(method="post")
          div.form-group
            lable.control-label 标题
            input.form-control(type='text' name='title')
          div.form-group
            lable.control-label 标签
            select.form-control(name="tag")
              option(selected) Java
              option Android
              option Nodejs
              option javaScript
              option Html&css
          div.form-group
            lable.control-label 内容
            textarea.form-control(rows="20" name='content')
          div.form-group
            input.col-md-4(type='submit' value='发布') 